<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_layout_background"
        android:gravity="center"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Esperant GADA"
            style="@style/itemListTextStyle"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/student_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6"
            style="@style/itemListTextStyle"
            android:layout_marginTop="4dp"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/student_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="University of Abomey-Calavi"
            android:textSize="18sp"
            style="@style/itemListTextStyle"
            android:layout_marginTop="4dp"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>